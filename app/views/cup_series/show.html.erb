<h2>Tulokset - <%= @cup_series.name %></h2>
<% content_for :sub_sub_menu do %>
  <%= render :partial => 'shared/cup_series_sub_menu' %>
<% end %>
<div class="section">
  <table>
    <thead>
      <tr>
        <th>&nbsp;</th>
        <th>Kilpailija</th>
        <% @cup.races.each do |race| %>
          <th title="<%= race.name %>"><%= truncate(race.name, :length => 10) %></th>
        <% end %>
        <th>Yhteispisteet</th>
      </tr>
    </thead>
    <% @cup_series.ordered_competitors.each_with_index do |cc, i| %>
      <tr id="comp_<%= i+1 %>" class="<%= i % 2 == 0 ? 'odd' : '' %>">
        <td><%= i + 1 %>.</td>
        <td><%= cc.last_name %> <%= cc.first_name %></td>
        <% cc.competitors.each do |c| %>
          <td class="center"><%= link_to points_print(c, false), series_competitor_path(c.series, c) %></td>
        <% end %>
        <td class='center total_points'><%= cc.points %></td>
      </tr>
    <% end %>
  </table>
</div>
<hr/>
<%= link_to "Takaisin cup-kilpailun etusivulle", cup_path(@cup) %>
