- unofficials = unofficials_result_rule @series.race
%h1= @series.race.name
= @series.race.location, = race_date_interval(@series.race, false)
%h2 #{@series.name} - #{series_result_title(@series, unofficials)}
- cache [@series, unofficials, I18n.locale] do
  - if @series.race.sport.shooting?
    = render :partial => 'series/shooting_race_desktop_results', locals: { series: @series }
  - else
    = render :partial => 'series/three_sport_race_infos', :locals => { :series => @series }
    = render :partial => 'series/three_sports_race_desktop_results', locals: { series: @series }
