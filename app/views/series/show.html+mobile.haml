.facebook_share
  = render partial: 'shared/facebook_share'
- content_for(:title, "#{@series.race.name} - #{@series.name} - #{series_result_title(@series, params[:all_competitors])}")
%h2= yield :title
= render :layout => 'series/series_status', :locals => { :series => @series } do
  = render :partial => 'series/infos', :locals => { :series => @series }
  - if @series.has_unofficial_competitors?
    - if params[:all_competitors]
      .action_box= link_to t('competitors.index.show_official_results'),
        race_series_path(@series.race, @series)
    - else
      .action_box= link_to t('competitors.index.show_unofficial_results'),
        race_series_path(@series.race, @series, :all_competitors => true)
  .section
    - cache [@series, params[:sort], params[:all_competitors], I18n.locale] do
      = render :partial => 'series/series_results', :locals => { :series => @series }
- if @series.race.series.count > 1
  %hr
  - @series.race.series.each do |s|
    - if s == @series
      .current_link= s.name
    - else
      = link_to s.name, race_series_path(s.race, s), class: 'primary_link'
%hr
= link_to t(:start_list), race_series_start_list_path(@series.race, @series), class: 'secondary_link'
%br
= link_to "#{t(:back_to_page)} #{@series.race.name}", race_path(@series.race), class: 'back_link'
