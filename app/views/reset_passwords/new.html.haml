- content_for :title, t('.title')
- content_for(:page_title, yield(:title))
.message.message--info= t '.info'
= flash_error
= flash_success
= form_tag(reset_password_path, class: 'form') do
  .form__field
    = label_tag :email, t('attributes.email')
    = email_field_tag :email
  .form__buttons
    = submit_tag t('.button'), class: 'button button--primary'
