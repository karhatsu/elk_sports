<% content_for(:title, t('.title')) %>
<% content_for(:page_title, yield(:title)) %>
<% license_link = PRODUCTION_URL + new_activation_key_path %>
<div class="info"><%= raw t('.info', :license_link => license_link) %></div>
<div class="section">
  <%= flash_error %>
  <%= form_tag license_path do %>
    <%= label_tag :email, t('.email_in_hirviurheilu_com') %>
    <%= email_field_tag :email %><br/>
    <%= label_tag :password, t('.password_in_hirviurheilu_com') %>
    <%= password_field_tag :password %><br/>
    <%= label_tag :activation_key, t('.activation_key') %>
    <%= text_field_tag :activation_key %><br/>
    <%= submit_tag t(:save) %>
  <% end %>
</div>
