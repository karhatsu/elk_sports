<table cellspacing="0" border="1" style="margin-bottom: 5px;">
  <tr>
    <th><%= t 'activerecord.models.competitor.one' %></th>
    <th id="table_club_title"><%= club_title(series.race) %></th>
    <th><%= t :number_short %></th>
    <th><%= t 'attributes.start_time' %></th>
    <% if result_column %>
      <th><%= t 'official.competitors.index.result_saved' %></th>
    <% end %>
    <% if remove_column %>
      <th>&nbsp;</th>
    <% end %>
  </tr>
  <% series.competitors.includes(:shots, :club, :age_group, :series).each do |comp| %>
    <tr id="competitor_<%= comp.id %>">
      <td>
        <%= link_to full_name(comp),
          edit_official_series_competitor_path(series.id, comp) %>
        <%= "(#{comp.age_group.name})" if comp.age_group %>
      </td>
      <td><%= comp.club.name %></td>
      <td class="center"><%= value_or_space(comp.number) %></td>
      <td class="center"><%= time_print(comp.start_time, true, '&nbsp;') %></td>
      <% if result_column %>
        <td class="center"><%= yes_or_empty(comp.finished?) %></td>
      <% end %>
      <% if remove_column %>
        <td><%= link_to t(:remove), official_series_competitor_path(series.id, comp),
            :data => { :confirm => t('official.competitors.index.remove_confirmation') },
            :method => :delete, :remote => true %></td>
      <% end %>
    </tr>
  <% end %>
</table>