<div class="section">
  <div class="info"><%= instructions %></div>
  <div class="success" id="<%= name %>_success" style="display:none;"></div>
  <div class="error" id="<%= name %>_error" style="display:none;"></div>
  <%= form_tag(path, :remote => true, :onsubmit => "show_spinner('#{name}')") do %>
    <%= text_field_tag :string, '', :id => "#{name}_string", :size => 30 %>
    <%= submit_tag 'Tallenna', :id => "submit_#{name}" %>
    <%= image_tag 'spinner.gif', :id => "#{name}_spinner", :style => 'display:none;' %>
  <% end %>
</div>
<%= javascript_tag do %>
function show_spinner(name) {
  $('#' + name + '_spinner').show();
}
<% end %>