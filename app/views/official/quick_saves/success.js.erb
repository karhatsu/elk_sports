result_text = '<%= t 'official.quick_saves.index.result_message', :competitor_number => @competitor.number,
  :competitor_name => full_name(@competitor), :series_name => @competitor.series.name, :result => @result %>';
$('#<%= @name %>_success').text(result_text);
$('#<%= @name %>_string').val('');
$('#<%= @name %>_spinner').hide();
$('#<%= @name %>_error').hide();
$('#<%= @name %>_success').show();

$('#latest').show();
if($('li#latest').length > 0) {
  $('li#latest').attr('style', '');
  $('li#latest').attr('id', '');
}
$('#latest_list').prepend('<li id="latest" style="color: olive; font-weight: bold;">' +
  result_text + '</li>');