- content_for :title, t('.title')
%h2= yield :title
- if @race.competitors.empty?
  .info= t '.no_competitors'
- else
  .info= t '.info'
  = form_tag(official_race_csv_export_path(@race)) do |f|
    = submit_tag t('.submit_button')
%h2= t '.import_title'
.action_box
  = link_to t('.import_link'), new_official_race_csv_import_path(@race)
%hr
= link_to t(:back_to_official_race_page), official_race_path(@race)
