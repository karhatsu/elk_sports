<% if @club.errors.any? %>
  <% error_msg = @club.errors.full_messages.join(". ") + "." %>
  $("#action_error").addClass("error");
  $("#action_error").html("<%= error_msg %>");
<% else %>
  $("#action_error").removeClass("error");
  $("#action_error").html("");
  $("#club_name_link_<%=@club.id%>").attr('style', 'display: inline;');
  $("#club_name_link_<%=@club.id%>").html("<%= @club.name %>");
  $("#club_long_name_td_<%= @club.id %>").html("<%= @club.long_name %>");
  $("#club_name_form_<%=@club.id%>").attr('style', 'display: none;');
<% end %>