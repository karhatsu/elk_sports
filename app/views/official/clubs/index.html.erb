<% content_for :title, "#{@race.name} - #{clubs_title(@race)}" %>
<h2><%= clubs_title(@race) %></h2>
<% club_word = (@race.club_level == Race::CLUB_LEVEL_PIIRI ? 'piirejä' : 'seuroja') %>
<div class="info">Tällä sivulla voit lisätä kilpailuun osallistuvien kilpailijoiden
  <%= club_word %> sekä korjata niiden nimiä ja poistaa ylimääräisiä. Huom! Voit lisätä
  <%= club_word %> myös samalla, kun lisäät kilpailijoita.</div>
<h2>Lisää <%= club_title(@race).downcase %></h2>
<div id="action_error"></div>
<%= form_for([:official, @race, Club.new], :remote => true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/>
  <%= f.label :long_name %>
  <%= f.text_field :long_name %> (ei pakollinen)<br/>
  <%= submit_tag "Lisää #{club_title(@race).downcase}", :id => 'submit' %>
  <span id="spinner"></span>
<% end %>
<% style = (@race.clubs.empty? ? " style='display: none;'" : "") %>
<h2 id="clubs_title"<%= style %>>Nykyiset <%= clubs_title(@race).downcase %></h2>
<% unless @race.clubs.empty? %>
  <% club_word = (@race.club_level == Race::CLUB_LEVEL_PIIRI ? 'piirin' : 'seuran') %>
  <div class="info">
    Jos haluat muuttaa <%= club_word %> nimeä, klikkaa nimessä olevaa linkkiä.
  </div>
<% end %>
<div class="section">
  <table id="clubs_table"<%= style %>>
    <tr>
      <th>Nimi</th>
      <th>Pitkä nimi</th>
      <th>Kilpailijoita</th>
      <th>&nbsp;</th>
    </tr>
    <% @race.clubs.each do |club| %>
      <tr id="club_row_<%= club.id %>">
        <td>
          <a class="club_name_link" id="club_name_link_<%= club.id %>" href="javascript:void(0)">
            <%= club.name %>
          </a>
          <span id="club_name_form_<%= club.id %>" style="display: none;">
            <%= form_for([:official, @race, club], :remote => true,
                :html => { :style => 'display:inline;' }) do |f| %>
              <%= f.text_field :name, :size => 7 %>&nbsp
              <%= f.text_field :long_name, :size => 15 %><%= submit_tag "Päivitä" %>
            <% end %>
            <%= button_to_function 'Peruuta', "cancel_edit(#{club.id}, \"#{club.name}\")" %>
          </span>
        </td>
        <td id="club_long_name_td_<%= club.id %>"><%= club.long_name %></td>
        <td class="center"><%= club.competitors.count %></td>
        <td class="center"><%= club.competitors.count == 0 ? (button_to "Poista",
            official_race_club_path(@race.id, club),
            :method => :delete,
            :remote => true,
            :class => 'remove_club') : raw('&nbsp;') %></td>
      </tr>
    <% end %>
  </table>
</div>
<%= javascript_tag do %>
  $("#submit").click(function() {
    $("#spinner").html('<%= image_tag 'spinner.gif' %>');
  });
  $(".club_name_link").click(function() {
    $(this).hide();
    $(this).next().show();
  });
  function cancel_edit(id, original_name) {
    $('#club_name_form_' + id + ' #club_name').val(original_name);
    $('#club_name_form_' + id).hide();
    $('#club_name_link_' + id).show();
  }
<% end %>
<hr/>
<%= link_to 'Takaisin Yhteenveto-sivulle', official_race_path(@race) %>