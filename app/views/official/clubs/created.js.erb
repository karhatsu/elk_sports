<% if @club.errors.any? %>
  <% error_msg = @club.errors.full_messages.join(". ") + "." %>
  $("#action_error").addClass("error");
  $("#action_error").html("<%= error_msg %>");
<% else %>
  $("#action_error").removeClass("error");
  $("#action_error").html("");
  $("#clubs_title").attr('style', '');
  $("#clubs_table").attr('style', '');
  $("#clubs_table tr:last").after("<%= escape_javascript(render :partial => 'club_row', :locals => { :club => @club }) %>");
  $("#club_name").val("");
<% end %>
$("#spinner").html("");