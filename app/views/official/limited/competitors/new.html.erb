<% content_for :title, "#{@race.name} - Kilpailijat" %>
<% if @race.series.empty? %>
  <div class="warning">Tähän kilpailuun ei ole vielä lisätty yhtään sarjaa.
    Voit lisätä kilpailijoita vasta sen jälkeen, kun päätoimitsija on lisännyt kilpailuun sarjat.</div>
<% elsif @race.clubs.empty? %>
  <div class="warning">Tähän kilpailuun ei ole vielä lisätty yhtään piiriä tai seuraa.
    Voit lisätä kilpailijoita vasta sen jälkeen, kun päätoimitsija on lisännyt kilpailuun piirit/seurat.</div>
<% else %>
  <h2>Lisää kilpailija</h2>
  <%= render :partial => 'form', :locals => { :show_cancel => false } %>

  <% unless @competitors.empty? %>
    <h2>Lisätyt kilpailijat (<%= @competitors.count %>)</h2>
    <div id="all_competitors" class="section">
      <%= render :partial => 'competitors_table' %>
    </div>
  <% end %>

<% end %>
