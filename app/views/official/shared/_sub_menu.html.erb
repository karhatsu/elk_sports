<% race = menu_race %>
<% if race %>
  <% series = menu_series %>
  <% series = race.series.first unless series %>
  <div class="second_level_menu">
    <div class="menu sub_menu">
      <ul>
        <%= menu_item "Yhteenveto", official_race_path(race), @is_race %>
        <%= menu_item "Kilpailu & sarjat", edit_official_race_path(race), @is_race_edit %>
        <% if series and !race.series.first.new_record? %>
          <%= menu_item "Kilpailijat", official_series_competitors_path(series), @is_competitors, nil, true do %>
            <% series_dropdown_menu(race, 'competitors') %>
          <% end %>
          <%= menu_item "Lähtöajat", official_race_start_list_path(race), @is_start_list %>
          <%= menu_item "Pikasyöttö", official_race_quick_saves_path(race), @is_quick_saves %>
          <%= menu_item "Ajat", official_series_times_path(series), @is_times, nil, true do %>
            <% series_dropdown_menu(race, 'times') %>
          <% end %>
          <%= menu_item "Arviot", official_series_estimates_path(series), @is_estimates, nil, true do %>
            <% series_dropdown_menu(race, 'estimates') %>
          <% end %>
          <%= menu_item "Ammunta", official_series_shots_path(series), @is_shots, nil, true do %>
            <% series_dropdown_menu(race, 'shots') %>
          <% end %>
          <%= menu_item "Oikeat arviot", official_race_correct_estimates_path(race), @is_correct_estimates %>
          <%= menu_item "Joukkuek.", official_race_team_competitions_path(race), @is_team_competitions %>
        <% end %>
        <%= menu_item "Viestit", official_race_relays_path(race), @is_relays %>
        <%= menu_item clubs_title(race), official_race_clubs_path(race), @is_clubs %>
        <% if online? %>
          <%= menu_item "Toimitsijat", official_race_race_rights_path(race), @is_race_rights %>
        <% end %>
        <% export_title = (offline? ? 'Julkaise' : 'Lataa') %>
        <%= menu_item export_title, new_official_race_exports_path(race), @is_export %>
      </ul>
    </div>
  </div>
<% end %>