- content_for(:title, t('.title'))
- content_for(:page_title, yield(:title))
= flash_error
= flash_success
- if @today.length == 0 && @future.length == 0 && @past.length == 0
  = highlight_info(t('.no_races_yet.long'))
  .action_box= link_to t('.add_new_race'), new_official_race_path
- else
  - unless @today.empty?
    .title_box.races_box
      .box_title= t 'home.show.competitions.today'
      .title_box_content
        = render partial: 'race_list', locals: { competitions: @today }
  .title_box.races_box
    .box_title= t 'home.show.upcoming_competitions'
    .title_box_content
      .action_box= link_to t('.add_new_race'), new_official_race_path
      = render partial: 'race_list', locals: { competitions: @future }
  .title_box.races_box
    .box_title= t 'home.show.competitions.cup'
    .title_box_content
      .action_box= link_to t('.add_new_cup'), new_official_cup_path
      = render partial: 'race_list', locals: { competitions: @cups }
  - unless @past.empty?
    .title_box.races_box#finished_races
      .box_title= t 'home.show.competitions.past'
      .title_box_content
        = render partial: 'race_list', locals: { competitions: @past, warn_unfinished: true }
