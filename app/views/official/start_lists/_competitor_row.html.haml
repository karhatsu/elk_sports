- order_class = c.new_record? ? '' : 'order'
%div.competitor_row{id: "competitor_#{id}"}
  - club_name = c.club.name if c.club
  = form_for([:official, parent, c], remote: true) do |f|
    - unless c.new_record?
      = hidden_field_tag '_method', :put
    = hidden_field_tag :start_list, true
    .value.number= f.number_field :number, size: 2, class: order_class
    - start_time = time_print(f.object.start_time, true, '')
    .value.start_time{style: 'white-space: nowrap;'}
      = f.text_field :start_time, value: start_time, include_seconds: true, blank: true, size: 8
      - unless c.new_record? || !c.race.start_time_defined?
        (#{time_print c.start_datetime, true})
    .value.first_name= f.text_field :first_name, size: 9
    .value.last_name= f.text_field :last_name, size: 14
    .value.club= text_field_tag :club_name, club_name, size: 14
    .value.series= f.collection_select :series_id, @all_series, :id, :name, {},
      onchange: "change_age_groups('#{id}', this.value)"
    - age_groups_visibility = @age_groups[c.series_id].length > 0 ? '' : 'display:none;'
    .value.age_group
      = f.collection_select :age_group_id, @age_groups[c.series_id], :id, :name,
        {}, { id: "age_groups_#{id}", style: age_groups_visibility }
      = image_tag 'spinner.gif', style: 'display:none;', id: "age_groups_spinner_#{id}"
    .value.button
      %input.save_button{type: 'submit', value: save_button, onClick: "start_updating('#{id}')"}
    .value{id: "status_#{id}"} &nbsp;
