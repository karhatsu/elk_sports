.result-cards
  - prev_results = 1.0/0.0
  - series.european_rifle_results.each_with_index do |comp, i|
    - @max_points = comp.european_rifle_score if i == 0
    .card{class: i % 2 == 0 ? 'card--odd' : ''}
      .card__number= "#{i + 1}." unless comp.european_rifle_results == prev_results
      .card__middle
        .card__name= full_name(comp)
        .card__middle-row= comp.club.name
        - extra_shots = comp.european_rifle_extra_shots
        - if extra_shots
          .card__middle-row
            #{t :extra_round}: #{shots_print extra_shots}
        .card__middle-row
          - [1, 2, 3, 4].each do |n|
            #{t "sport_name.european_sub.rifle#{n}"}: #{comp.send("european_rifle#{n}_score").to_i}
            - shots = comp.send("european_rifle#{n}_shots")
            - if shots
              %span.card__sub-result.card__sub-result--shoot.shots= shots_print shots
      .card__main-value
        - if comp.no_result_reason
          = comp.no_result_reason
        - else
          = comp.european_rifle_score
          = rifle_national_record_print(comp) if comp.european_rifle_score.to_i >= @max_points.to_i
    - prev_results = comp.european_rifle_results
