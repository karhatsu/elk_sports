.section
  %table
    %tr
      %th &nbsp;
      %th= t :team
      %th.center= time_title @race
      %th= t 'relays.show.estimate_penalties_short'
      %th= t 'relays.show.shooting_penalties_short'
    - relay.results.each_with_index do |team, i|
      %tr{id: "team_#{i + 1}"}
        %td
          %b #{i + 1}.
        %td.team_name
          %a.team_name_link{id: team.id, href: 'javascript:void(0)'}= team.name
          (#{team.number})
        %td.center.team_points
          - if team.no_result_reason
            = no_result_reason_print(team.no_result_reason, 'relay_team')
          - else
            = time_from_seconds(team.time_in_seconds)
            = relay_time_adjustment(team.adjustment.to_i)
        %td.center= team.estimate_penalties_sum
        %td.center= team.shoot_penalties_sum
        %td{colspan: 2} &nbsp;
      - unless params[:exclude_competitors]
        - team.relay_competitors.each do |comp|
          %tr.competitor_row{class: "team_#{team.id}", style: 'display: none;'}
            %td &nbsp;
            %td= full_name(comp)
            %td.center
              = time_from_seconds(team.time_in_seconds(comp.leg))
              (#{time_from_seconds comp.time_in_seconds})
              = relay_time_adjustment(comp.adjustment.to_i)
            %td.center
              = comp.estimate_penalties
              - if relay.finished? and comp.estimate
                (#{comp.estimate}m)
            %td.center= comp.misses
