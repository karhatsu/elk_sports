<%
race = menu_race
%>
<% if race %>
  <div class="second_level_menu">
    <div class="menu sub_menu">
      <ul>
        <%= menu_item "Kilpailun etusivu", race_path(race), @is_race %>
        <% series = menu_series %>
        <% series = race.series.first unless series %>
        <% if series %>
          <%= menu_item "Lähtölistat", series_start_list_path(series), @is_start_list, nil, true do %>
            <% series_dropdown_menu(race, 'start_list') %>
          <% end %>
          <%= menu_item "Tulokset", series_competitors_path(series), @is_results, nil, true do %>
            <% series_dropdown_menu(race, 'results') %>
          <% end %>
          <% if race.has_team_competition? %>
            <%= menu_item "Joukkuekilpailut", race_team_competition_path(race,
              race.team_competitions.first), @is_team_results, nil, true do %>
              <% team_competitions_dropdown_menu(race) %>
            <% end %>
          <% end %>
        <% end %>
        <% unless race.relays.empty? %>
          <%= menu_item "Viestit", race_relay_path(race, race.relays.first), @is_relays, nil, true do %>
            <% relays_dropdown_menu(race) %>
          <% end %>
        <% end %>
        <% if race.video_source %>
          <%= menu_item 'Video', race_video_path(race), @is_video %>
        <% end %>
        <% unless offline? or @is_start_list or race.all_competitions_finished? %>
          <%= menu_item "Tuloskehä", race_result_rotation_path(race), result_rotation_cookie %>
        <% end %>
        <%= menu_item "Lehdistö", new_race_medium_path(race), @is_media %>
        </ul>
    </div>
  </div>
<% end %>