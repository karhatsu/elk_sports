<div class="menu main_menu">
  <ul>
    <%= menu_item t('main_menu.home_page'), root_path, @is_main_page %>
    <%= menu_item t('main_menu.competitions'), races_path, (@is_races or @is_cup), nil, (!@is_races and menu_race) do %>
      <% dropdown_menu_single(link_to(menu_race.name, race_path(menu_race))) %>
    <% end %>
    <%= menu_item t('main_menu.official'), official_root_path, @is_official, nil,
      (!@is_official and menu_race and own_race?(menu_race)) do %>
      <% dropdown_menu_single(link_to(menu_race.name, official_race_path(menu_race))) %>
    <% end %>
    <%= menu_item t('main_menu.info'), info_path, @is_info %>
    <% unless offline? %>
      <%= menu_item t('main_menu.prices'), prices_path, @is_prices %>
      <% if current_user %>
        <%= menu_item t('main_menu.personal'), account_path, @is_account %>
      <% elsif %>
        <%= menu_item t('main_menu.start'), register_path, @is_start %>
      <% end %>
      <%= menu_item t('main_menu.offline'), offline_vs_online_path, @is_offline_info %>
    <% end %>
    <% if current_user and current_user.admin? %>
      <%= menu_item "Admin", admin_root_path, @is_admin %>
    <% end %>
  </ul>
</div>