- content_for(:title, "Admin - Kilpailut")
%h2= yield :title
= flash_success
%table
  %tr
    %th Nimi
    %th Pvm
    %th Sijainti
    %th Toimitsijat
    %th Laskutus
    %th &nbsp;
    %th &nbsp;
  - @races.each_with_index do |race, i|
    %tr{id: "race_row_#{race.id}", class: i % 2 == 0 ? 'odd' : ''}
      %td= truncate(race.name, length: 30)
      %td= race_date_interval(race)
      %td= truncate(race.location, length: 30)
      %td= truncate(race.users.collect { |user| full_name(user) }.join(', '), length: 50)
      %td= race.billing_info
      %td= link_to 'Muokkaa', edit_admin_race_path(race)
      %td= link_to 'Poista', admin_race_path(race)
