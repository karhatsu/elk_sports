= render :partial => 'shared/form_errors', :locals => { :item => @announcement }
= form_for([:admin, @announcement]) do |f|
  %div
    .form_label= f.label :title
    = f.text_field :title
  %div
    .form_label= f.label :content
    = f.text_area :content, rows: 15, cols: 80
  %div
    .form_label= f.label :published
    = f.date_select :published
  %div
    .form_label= f.label :active
    = f.check_box :active
  %div
    .form_label= f.label :front_page
    = f.check_box :front_page
  = submit_tag 'Tallenna'
