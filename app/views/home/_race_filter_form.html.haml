= form_tag '/', method: :get, class: 'form' do
  .form__horizontal-fields
    .form__field= select_tag :sport_key, options_for_select(@sports, params[:sport_key]), prompt: t(:all_sports)
    .form__field= select_tag :district_id, options_from_collection_for_select(District.all, :id, :name, params[:district_id]), prompt: t(:all_districts)
    .form__buttons= submit_tag t(:choose), class: 'button button--primary'
