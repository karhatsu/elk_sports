= render partial: 'district_menu'
- unless @today.empty?
  %h2= t '.competitions.today'
  .row#races_today
    = render partial: 'race_list', locals: { races: @today }
#future_races
  - if @future.empty?
    %h2= t '.upcoming_competitions'
    = t '.no_upcoming_competitions'
  - else
    - @future.each do |key, races|
      %h2= t ".competitions.#{key}"
      .row{class: "races_#{key}"}
        = render partial: 'race_list', locals: { races: races }
- unless @past.empty?
  %h2= t '.latest_ended_competitions'
  .row#old_races
    = render partial: 'race_list', locals: { races: @past, max: 11 }
- unless @announcements.empty?
  %h2= t '.announcements'
  .row#home_page_announcements
    - @announcements.each do |ann|
      .col-xs-12.col-sm-6.col-md-4.col-lg-3
        %a.card{href: announcement_path(ann)}
          .card-middle
            .card-name= ann.title
            .card-sub-results= date_print ann.published
= render :partial => 'shared/facebook_like_box'
