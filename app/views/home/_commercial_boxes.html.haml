.title_box.commercial_box
  .box_title Kilpailun järjestäjille
  .title_box_content
    %div Hirviurheilu on erinomainen valinta kisojesi tulospalveluksi!
    .changing_text_wrapper
      #changing_text_official
        %div
          %span.keyword Luotettu
          \- SM-kisojen tulospalveluna jo vuodesta 2011
        %div
          %span.keyword Helppokäyttöinen
          \- palvelu on heti käytössäsi ja sitä on helppo käyttää
        %div
          %span.keyword Nopeuttava
          \- useampi toimitsija voi syöttää tuloksia yhtä aikaa
        %div
          %span.keyword Reaaliaikainen
          \- tulokset ovat välittömästi yleisön nähtävissä
        %div
          %span.keyword Luotettava
          \- syötä kilpailijoiden suoritukset, palvelu hoitaa loput
        %div
          %span.keyword Joustava
          \- voit luoda juuri ne sarjat kuin haluat
        %div
          %span.keyword Monipuolinen
          \- myös joukkuekilpailut, viestit ja cup-kilpailut
        %div
          %span.keyword Tehostava
          \- cup-kilpailuiden tuloslaskenta vähimmäisvaivalla
        %div
          %span.keyword Jännittävä
          \- mahdollistaa lähes reaaliaikaisen seurannan kotikatsomoissa
    .links
      = link_to 'Lue lisää', info_path, class: 'commercial_box_link'
      - unless current_user
        tai
        = link_to 'Aloita käyttö', register_path, class: 'commercial_box_link'
.title_box.commercial_box
  .box_title Kilpailijoille
  .title_box_content
    %div Muista suositella Hirviurheilua kilpailuiden järjestäjille!
    .changing_text_wrapper
      #changing_text_competitor
        %div Lähtöaikasi voi olla saatavillasi hyvissä ajoin ennen kilpailua
        %div Helppokäyttöinen palvelu nopeuttaa tulosten saamista suorituksen jälkeen
        %div Voit luottaa siihen, että tulokset on laskettu oikein
        %div Pystyt tarkastamaan tulokset netistä jopa jo kilpailun aikana
        %div Kotijoukkosi voivat seurata kilpailua reaaliaikaisesti
        %div Kilpailun jälkeen voit jossitella tuloksia kotona
:javascript
  var officialSlider = $("#changing_text_official").bxSlider({
    auto: true,
    infiniteLoop: true,
    nextText: '',
    pause: 6000,
    prevText: '',
    randomStart: true,
    speed: 1500
  });
  var competitorSlider = $("#changing_text_competitor").bxSlider({
    auto: true,
    autoDelay: 3000,
    infiniteLoop: true,
    nextText: '',
    pause: 6000,
    prevText: '',
    randomStart: false,
    speed: 1500
  });
  $(document).on('page:fetch', function() {
    officialSlider.stopShow();
    competitorSlider.stopShow();
  });
