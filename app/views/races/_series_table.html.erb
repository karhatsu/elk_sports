<% show_national_records = (!@race.finished? and @race.has_any_national_records_defined?) %>
<% show_start_time = @race.start_order == Race::START_ORDER_BY_SERIES %>
<table>
  <tr>
    <th><%= t 'activerecord.models.series', :count => 1 %></th>
    <% if show_start_time %><th><%= t 'attributes.start_time' %></th><% end %>
    <th><%= t 'races.show.competitors' %></th>
    <th>&nbsp;</th>
    <% if show_national_records %>
      <th>SE</th>
    <% end %>
  </tr>
  <% @race.series.each do |s| %>
    <tr id="series_<%= s.id %>">
      <td><%= s.name %></td>
      <% if show_start_time %>
        <td><% if s.start_time %><%= series_datetime_print(s, true) %><% else %>-<% end %></td>
      <% end %>
      <% if s.competitors.empty? %>
        <td colspan="2">Sarjaan ei ole merkitty kilpailijoita</td>
      <% else %>
        <td><%= s.competitors.count %></td>
        <td>
          <% if !s.has_start_list? %>
            Sarjan lähtöluetteloa ei ole vielä julkaistu
          <% else %>
            <%= link_to t(:results), series_competitors_path(s) %>,
            <%= link_to t(:start_list), series_start_list_path(s) %>
          <% end %>
        </td>
      <% end %>
      <% if show_national_records %>
        <td><%= s.national_record %></td>
      <% end %>
    </tr>
  <% end %>
</table>