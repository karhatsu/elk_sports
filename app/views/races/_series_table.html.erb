<% show_national_records = (!@race.finished? and @race.has_any_national_records_defined?) %>
<table>
  <tr>
    <th>Nimi</th>
    <th>Lähtöaika</th>
    <th>Kilpailijoita</th>
    <% if show_national_records %>
      <th>SE</th>
    <% end %>
    <th>&nbsp;</th>
  </tr>
  <% @race.series.each do |s| %>
    <tr id="series_<%= s.id %>">
      <td><%= s.name %></td>
      <td>
        <% if s.start_time %>
          <%= series_datetime_print(s, true) %>
        <% else %>
          -
        <% end %>
      </td>
      <% if s.competitors.empty? %>
        <td colspan="<%= @race.finished? ? 2 : 3 %>">Sarjaan ei ole merkitty kilpailijoita</td>
      <% else %>
        <td><%= s.competitors.count %></td>
        <% if show_national_records %>
          <td><%= s.national_record %></td>
        <% end %>
        <td>
          <% if !s.has_start_list? %>
            Sarjan lähtöluetteloa ei ole vielä julkaistu
          <% else %>
            <%= link_to "Tulokset", series_competitors_path(s) %>,
            <%= link_to "Lähtölista", series_start_list_path(s) %>
          <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>