.cards
  - competitors.each_with_index do |comp, i|
    .card{class: i % 2 == 0 ? 'card-odd' : ''}
      .card-number= comp.number
      .card-middle
        .card-name
          = full_name(comp)
          - if comp.age_group
            %span
              (#{comp.age_group.name})
        .card-club
          = comp.club.name
          - unless comp.team_name.blank?
            (#{comp.team_name})
      .card-main-value
        %div= time_print(comp.start_time, true)
        - if comp.race.start_time_defined?
          %div
            (#{time_print comp.start_datetime, true})
