.facebook_share
  = render partial: 'shared/facebook_share'
= content_for(:title, "#{@series.race.name} - #{@series.name} - #{t(:start_list)}")
%h2= yield :title
= render :partial => "competitors/start_notice", :locals => { :series => @series }
- if @series.start_list.empty?
  .info= t '.no_competitors_or_start_times'
- else
  .section
    = render :partial => 'table',
      :locals => { :competitors => @series.start_list.includes(:club, :age_group), :race => @series.race }
%hr
= link_to t(:results), series_competitors_path(@series)
%br
= link_to "#{t(:back_to_page)} #{@series.race.name}", race_path(@series.race)
