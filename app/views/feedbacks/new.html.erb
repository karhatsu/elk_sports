<% content_for(:title, 'Lähetä palautetta') %>
<% content_for(:page_title, yield(:title)) %>
<%= flash_error %>
<%= form_tag(feedbacks_path) do %>
  <%= label_tag :comment, 'Palaute' %><br/>
  <%= text_area_tag :comment, @comment, :cols => 60, :rows => 8 %><br/>
  <%= label_tag :name, 'Nimi' %>
  <%= text_field_tag :name, @name %><br/>
  <%= label_tag :email, 'Sähköposti' %>
  <%= email_field_tag :email, @email %><br/>
  <%= label_tag :tel, 'Puhelin' %>
  <%= text_field_tag :tel, @tel %><br/>
  <%= submit_tag 'Lähetä' %>
<% end %>
<%= render :partial => 'shared/company_contact', :locals => { :corner => true } %>
