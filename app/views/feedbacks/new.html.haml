- content_for(:title, t(:send_feedback))
- content_for(:page_title, yield(:title))
= flash_error
.info= t '.race_info'
%div{style: "position: relative;"}
  = form_tag(feedbacks_path, :class => 'feedback_form') do
    %div
      %span.form_label= label_tag :race_id, t('.feedback_receiver')
      %span= select_tag :race_id, options_for_select(races_drop_down_array(@races), @race_id), prompt: '- Yleinen Hirviurheilu-palaute -'
    %div
      %span.form_label= label_tag :comment, t(:feedback)
      %span= text_area_tag :comment, @comment, :cols => 60, :rows => 8
    %div
      %span.form_label= label_tag :name, t('attributes.name')
      %span= text_field_tag :name, @name
    %div
      %span.form_label= label_tag :email, t('attributes.email')
      %span= email_field_tag :email, @email
    %div
      %span.form_label= label_tag :tel, t(:tel)
      %span= text_field_tag :tel, @tel
    = submit_tag t(:send)
  = render :partial => 'shared/company_contact', :locals => { :corner => true }
