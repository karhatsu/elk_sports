div.error, div.warning, div.success, div.important, div.info {
    border: solid 1px olive;
    border-radius: 2px;
    color: white;
    padding: 8px;
    margin: 8px 0;
}

div.section div.error, div.section div.warning, div.section div.success, div.section div.important, div.section div.info {
    margin: 0 0 8px 0;
}

div.error a, div.warning a, div.success a, div.important a, div.info a {
    color: white;
    text-decoration: underline;
}

div.error {
    background-color: #CC3300;
    background: linear-gradient(to right, rgba(190, 31, 4, 0.9), rgba(190, 31, 4, 0.7));
    border-color: #CC3300;
}

div.warning {
    background-color: #FF7F00;
    background: linear-gradient(to right, rgba(253, 106, 7, 1), rgba(253, 106, 7, 0.7));
    border-color: #FF7F00;
}

div.important {
    background-color: #FF7F00;
    background: linear-gradient(to right, rgba(253, 66, 7, 1), rgba(253, 66, 7, 0.7));
    border-color: #FF7F00;
}

div.success {
    background-color: olive;
    background: linear-gradient(to right, rgba(128, 128, 0, 0.9), rgba(128, 128, 0, 0.7));
    border-color: olive;
}

div.info {
    background-color: #27A;
    background: linear-gradient(to right, rgba(29, 99, 153, 0.9), rgba(29, 99, 153, 0.7));
    border-color: #27A;
}

div.field_with_errors {
    color: #CC3300;
    display: inline;
}

div.error ul {
    margin: 0px;
    list-style: none;
    padding-left: 0px;
}

span.error {
    background-color: #CC3300;
    color: white;
}

span.success {
    background-color: olive;
    color: white;
    padding: 2px 4px;
}

li.success {
    background-color: olive;
    color: white;
}

div.info_flash {
    background: none;
    background-color: #fff;
    color: #27A;
}