body {
    background-color: #96964b;
    background: linear-gradient(to right, rgba(128, 128, 0, 0.6), rgba(128, 128, 0, 0.9), rgba(128, 128, 0, 0.6));
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    margin: 0;
}

h1 {
    font-size: 20px;
}

h2 {
    font-size: 18px;
    margin: 16px 0 8px;
}

h3 {
  font-size: 16px;
}

th {
    text-align: left;
}

th, td {
    padding: 3px 2px;
}

th.with_primary_link, td.with_primary_link {
    padding: 0;
}

.list_item {
    padding: 3px 0;
}

a {
    color: olive;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

.primary_link, .secondary_link, .back_link, .name_link, .current_link {
  border: solid 1px olive;
  border-radius: 2px;
  box-shadow: 3px 3px 3px #ccc;
  cursor: pointer;
  display: inline-block;
  padding: 5px 10px;
  margin: 3px;
  min-width: 25px;
}

.primary_link, .name_link {
  background-color: olive;
  background: linear-gradient(to right, rgba(128, 128, 0, 0.9), rgba(128, 128, 0, 0.7));
  color: #fff;
}

.secondary_link, .back_link {
  background-color: #fff;
  color: olive;
}

.primary_link.long_button {
  margin: 3px 0;
  width: 90%;
}

#all_races_link .secondary_link {
  margin: 8px 0 0;
}

.name_link {
  padding: 2px;
  margin: 2px 0;
}

.primary_link:hover,.secondary_link:hover, .back_link:hover, .name_link:hover {
  background-color: #1d6399;
  background: linear-gradient(to right, rgba(29, 99, 153, 0.9), rgba(29, 99, 153, 0.7));
  color: #fff;
}

.current_link {
  background-color: #1d6399;
  background: linear-gradient(to right, rgba(29, 99, 153, 0.9), rgba(29, 99, 153, 0.7));
  color: #fff;
  cursor: default;
}

select {
  background-color: white;
  color: olive;
  height: 26px;
  padding: 3px;
}

.clear {
  clear: both;
}

#login_links {
  margin: 5px 5px 0;
  text-align: right;
}

#login_links a {
  color: white;
  text-decoration: underline;
}

#header {
    background-color: olive;
    border-top: 1px solid #fff;
    border-bottom: 1px solid #fff;
    display: flex;
    align-items: center;
    margin: 6px 0 20px 0;
    padding: 4px 0;
    width: 100%;
}

#header img {
  width: 32px;
}

#header .header-title {
    color: #fff;
    flex-grow: 1;
    font-size: 24px;
    font-weight: bold;
    text-align: center;
    text-decoration: none;
}

#main_content {
  background-color: #FFF;
  border: 1px solid olive;
  border-radius: 2px;
  padding: 8px;
  margin: 8px;
}

@media only screen and (min-width: 48em) {
  #main_content {
    padding: 16px;
    margin: 16px;
  }
}

@media only screen and (min-width: 64em) {
  #main_content {
    padding: 32px;
    margin: 32px;
  }
}

#footer {
    margin: 10px 2% 50px;
    text-align: center;
    width: 96%;
}

#footer span {
    color: #fff;
}

#footer a {
    color: #fff;
    padding: 0;
}

.facebook_share {
    height: 20px;
    text-align: right;
}

.center {
    text-align: center;
}

.explanation {
  cursor: help;
}

.section {
    border: 1px solid #ccc;
    border-radius: 3px;
    margin-bottom: 8px;
    padding: 5px;
}

div.form_label {
  background-color: #DDEEB5;
  border-radius: 2px;
  margin: 8px 0 0;
  padding: 3px;
  vertical-align: top;
  width: 95%;
}

.form_field input {
  margin-top: 2px;
  width: 95%;
}

.form_field_info {
  color: #888;
  font-size: 0.9em;
}

.feedback_text_area {
  height: 100px;
  width: 95%;
}

.submit_button {
  margin: 8px 0;
}

#district_menu {
  margin-bottom: 5px;
}

tr.odd {
    background-color: #DDEEB5;
}

blockquote.public_message {
  background-color: #eee;
  border-radius: 2px;
  color: #383838;
  font-size: 12px;
  font-style: italic;
  margin: 0 0 10px;
  padding: 5px 30px;
  line-height: 1.45;
  position: relative;
}

blockquote.public_message:before {
  color: #7a7a7a;
  content: "\201C";
  display: block;
  font-family: Georgia, serif;
  font-size: 35px;
  padding-left: 10px;
  position: absolute;
  left: -5px;
  top: -5px;
}

blockquote.public_message p:first-child {
  margin: 0;
}

blockquote.public_message p {
  margin-bottom: 0;
}

.cards {
  display: flex;
  flex-direction: column;
}

.card {
  border: 1px solid olive;
  border-radius: 2px;
  box-shadow: 3px 3px 3px #ccc;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 6px;
  margin: 4px 0;
}

a.card {
  color: #000;
}

a.card .card-name {
  color: olive;
}

a.card:active, a.card:hover {
  text-decoration: none;
}

a.card:active {
  background-color: olive;
  color: #fff;
}

a.card:active .card-name {
  color: #fff;
}

.card-odd {
  background-color: #DDEEB5;
}

.card-number, .card-name, .card-main-value {
  font-size: 16px;
  font-weight: 600;
}

.card-number {
  min-width: 32px;
  text-align: center;
  padding-right: 6px;
}

.card-middle {
  flex-grow: 1;
}

.card-name span {
  font-size: 12px;
}

.card-club, .card-sub-results {
  margin-top: 4px;
}

.card-sub-results:empty {
  margin-top: 0;
}

.card-main-value {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 6px;
}

.card-time, .card-shoot, .card-estimate {
  background-size: 12px;
  background-repeat: no-repeat;
  padding-left: 16px;
  padding-right: 6px;
  white-space: nowrap;
}

.card-time {
  background-image: url(<%= image_path 'icon-clock.png' %>);
}

.card-shoot {
  background-image: url(<%= image_path 'icon-shoot.png' %>);
}

.card-estimate {
  background-image: url(<%= image_path 'icon-estimate.png' %>);
}
