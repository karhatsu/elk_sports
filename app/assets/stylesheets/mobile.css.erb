body {
    background-color: olive;
    font-family: monospace;
    font-size: 12px;
}

h2 {
    font-size: 15px;
}

th {
    text-align: left;
}

th, td {
    padding: 3px 2px;
}

.list_item {
    padding: 3px 0;
}

a {
    color: olive;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

#header {
    color: #FFF;
    font-size: 16px;
    text-align: center;
}

#header a {
    color: #FFF;
    text-decoration: none;
}

#main_area {
    margin: 1%;
    width: 96%;
}

#main_content {
    background-color: #FFF;
    border: 1px solid olive;
    border-radius: 2px;
    padding: 3%;
}

#footer {
    text-align: center;
}

#footer a {
    color: #fff;
}

.center {
    text-align: center;
}

.section {
    border: 1px solid #ccc;
    border-radius: 3px;
    margin-bottom: 8px;
    padding: 5px;
}

div.form_label {
  background-color: #DDEEB5;
  border-radius: 2px;
  display: inline-block;
  margin: 8px 0 0;
  padding: 3px;
  vertical-align: top;
  width: 95%;
}

.feedback_text_area {
  height: 100px;
  width: 95%;
}

.submit_button {
  margin: 8px 0;
}

div.error, div.warning, div.success, div.important, div.info {
    padding: 5px 3px 3px 30px;
    min-height: 17px;
}

div.error a, div.warning a, div.success a, div.important a, div.info a {
    color: white;
    text-decoration: underline;
}

div.field_with_errors {
    color: #CC3300;
    display: inline;
}

div.error {
    background-image: url(<%= image_path 'error.png' %>);
    background-repeat: no-repeat;
    background-color: #CC3300;
    color: white;
    margin-bottom: 8px;
    border: 1px solid olive;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

div.error ul {
    margin: 0px;
    list-style: none;
    padding-left: 0px;
}

span.error {
    background-color: #CC3300;
    color: white;
}

div.warning {
    background-image: url(<%= image_path 'warning.png' %>);
    background-repeat: no-repeat;
    background-color: #FF7F00;
    color: white;
    margin-bottom: 8px;
    border: 1px solid olive;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

div.important {
    background-image: url(<%= image_path 'important.png' %>);
    background-repeat: no-repeat;
    background-color: #FF7F00;
    color: white;
    margin-bottom: 8px;
    border: 1px solid olive;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

div.success {
    background-image: url(<%= image_path 'success.png' %>);
    background-repeat: no-repeat;
    background-color: olive;
    color: white;
    margin-bottom: 8px;
    border: 1px solid olive;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

span.success {
    background-color: olive;
    color: white;
}

li.success {
    background-color: olive;
    color: white;
}

div.info {
    background-image: url(<%= image_path 'info.png' %>);
    background-repeat: no-repeat;
    border: solid 1px #27A;
    background-color: #27A;
    color: white;
    margin-bottom: 7px;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

div.info_flash {
    background-image: none;
}

.home_page_box {
    margin: 0 0 20px;
}

.box_sub_title {
    background-color: #DDEEB5;
    font-size: 13px;
    margin: 0 0 3px;
    padding: 4px;
}

.home_page_box.announcements .box_sub_title {
  background-color: #FF7F00;
  color: #fff;
}

.race_link {
    margin: 0 0 5px;
}

.race_info {
    color: #444;
}

.races_of_cup {
    margin: 0 0 0 10px;
}

.all_races_link {
  margin: 10px 0 0;
}

.announcement_link {
    margin: 0 0 5px;
}

tr.odd {
    background-color: #DDEEB5;
}
