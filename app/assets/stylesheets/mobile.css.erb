body {
    background-color: olive;
    background: linear-gradient(to right, rgba(128, 128, 0, 0.6), rgba(128, 128, 0, 0.9), rgba(128, 128, 0, 0.6));
    font-family: monospace;
    font-size: 12px;
}

h1 {
    font-size: 17px;
}

h2 {
    font-size: 15px;
}

th {
    text-align: left;
}

th, td {
    padding: 3px 2px;
}

th.with_primary_link, td.with_primary_link {
    padding: 0;
}

.list_item {
    padding: 3px 0;
}

a {
    color: olive;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

.primary_link, .secondary_link, .back_link, .name_link {
  border: solid 1px olive;
  border-radius: 2px;
  box-shadow: 3px 3px 3px #ccc;
  cursor: pointer;
  display: inline-block;
  padding: 5px 10px;
  margin: 3px;
  min-width: 25px;
}

.primary_link, .name_link {
  background-color: olive;
  background: linear-gradient(to right, rgba(128, 128, 0, 0.9), rgba(128, 128, 0, 0.7));
  color: #fff;
}

.secondary_link, .back_link {
  background-color: #fff;
  color: olive;
}

.name_link {
  padding: 2px;
  margin: 2px 0;
}

.primary_link:hover,.secondary_link:hover, .back_link:hover, .name_link:hover {
  background-color: #1d6399;
  background: linear-gradient(to right, rgba(29, 99, 153, 0.9), rgba(29, 99, 153, 0.7));
  color: #fff;
}

.clear {
  clear: both;
}

#header {
    color: #FFF;
    font-size: 20px;
    text-align: center;
}

#header a {
    color: #FFF;
    font-weight: bold;
    text-decoration: none;
}

#main_area {
    margin: 1%;
    width: 96%;
}

#main_content {
    background-color: #FFF;
    border: 1px solid olive;
    border-radius: 2px;
    padding: 3%;
}

#footer {
    margin-bottom: 50px;
    text-align: center;
}

#footer a {
    color: #fff;
}

.facebook_share {
    height: 20px;
    text-align: right;
}

.center {
    text-align: center;
}

.explanation {
  cursor: help;
}

.section {
    border: 1px solid #ccc;
    border-radius: 3px;
    margin-bottom: 8px;
    padding: 5px;
}

div.form_label {
  background-color: #DDEEB5;
  border-radius: 2px;
  display: inline-block;
  margin: 8px 0 0;
  padding: 3px;
  vertical-align: top;
  width: 95%;
}

.feedback_text_area {
  height: 100px;
  width: 95%;
}

.submit_button {
  margin: 8px 0;
}

.home_page_box {
    margin: 0 0 20px;
}

.box_sub_title {
    background-color: #DDEEB5;
    border-bottom: solid 2px #888;
    font-family: arial, helvetica, sans-serif;
    font-size: 15px;
    margin: 0 0 3px;
    padding: 4px;
}

.home_page_box.announcements .box_sub_title {
  background-color: #FF7F00;
  color: #fff;
}

.race_link, .cup_race_link {
    margin: 0 0 10px;
}

.race_info {
    color: #444;
}

.races_of_cup {
    margin: 0 0 0 10px;
}

.all_races_link {
  margin: 10px 0 0;
}

.announcement_link {
    margin: 0 0 5px;
}

tr.odd {
    background-color: #DDEEB5;
}
