body {
    background-color: #96964b;
    background: linear-gradient(to right, rgba(128, 128, 0, 0.6), rgba(128, 128, 0, 0.9), rgba(128, 128, 0, 0.6));
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    margin: 0;
}

h1 {
    font-size: 20px;
}

h2 {
  font-size: 18px;
  margin: 16px 0 8px;
  display: flex;
  align-items: center;
}

h2.emphasize {
  text-transform: uppercase;
}

h2 .material-icons-outlined {
  margin-right: 4px;
}

h3 {
  font-size: 16px;
}

th {
    text-align: left;
}

th, td {
    padding: 3px 2px;
}

th.with_primary_link, td.with_primary_link {
    padding: 0;
}

.list_item {
    padding: 3px 0;
}

a {
    color: olive;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

#login_links {
  margin: 5px 5px 0;
  text-align: right;
}

#login_links a {
  color: white;
  text-decoration: underline;
}

#header {
    background-color: olive;
    border-top: 1px solid #fff;
    border-bottom: 1px solid #fff;
    display: flex;
    align-items: center;
    margin: 6px 0 20px 0;
    padding: 4px 0;
    width: 100%;
}

#header img {
  width: 32px;
}

#header .header-title {
    color: #fff;
    flex-grow: 1;
    font-size: 24px;
    font-weight: bold;
    text-align: center;
    text-decoration: none;
}

#main_content {
  background-color: #FFF;
  border: 1px solid olive;
  border-radius: 2px;
  padding: 8px;
  margin: 8px;
}

@media only screen and (min-width: 48em) {
  #main_content {
    padding: 16px;
    margin: 16px;
  }
}

@media only screen and (min-width: 64em) {
  #main_content {
    padding: 32px;
    margin: 32px;
  }
}

#footer {
    margin: 10px 2% 50px;
    text-align: center;
    width: 96%;
}

#footer span {
    color: #fff;
}

#footer a {
    color: #fff;
    padding: 0;
}

.facebook_share {
    height: 20px;
    text-align: right;
}

.center {
    text-align: center;
}

.explanation {
  cursor: help;
}

.feedback_text_area {
  height: 100px;
  width: 95%;
}

#district_menu {
  margin-bottom: 5px;
}

tr.odd {
    background-color: #DDEEB5;
}

blockquote.public_message {
  background-color: #eee;
  border-radius: 2px;
  color: #383838;
  font-size: 12px;
  font-style: italic;
  margin: 0 0 10px;
  padding: 5px 30px;
  line-height: 1.45;
  position: relative;
}

blockquote.public_message:before {
  color: #7a7a7a;
  content: "\201C";
  display: block;
  font-family: Georgia, serif;
  font-size: 35px;
  padding-left: 10px;
  position: absolute;
  left: -5px;
  top: -5px;
}

blockquote.public_message p:first-child {
  margin: 0;
}

blockquote.public_message p {
  margin-bottom: 0;
}

.before_facebook_like_box {
  height: 16px;
}

.pagination {
  margin: 8px 0;
}

.announcement {
  margin-bottom: 24px;
}
