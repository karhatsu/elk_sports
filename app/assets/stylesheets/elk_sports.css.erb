body {
    background-color: olive;
    font-family: monospace;
    font-size: 12px;
}

a {
    color: olive;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

h2 {
    margin-top: 10px;
    font-size: 16px;
}

h3 {
    font-size: 14px;
}

form {
    margin: 0px;
}

div.sub_element {
    background-color: #DDEEB5;
    padding: 5px;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

div.sub_form {
    margin-bottom: 5px;
}

div.sub_sub_element {
    margin-top: 2px;
    background-color: white;
    padding: 3px;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

div.sub_sub_element h3 {
    margin-top: 2px;
    margin-bottom: 2px;
    font-weight: normal;
    font-size: 12px;
}

div.age_groups_element {
    width: 80%;
}

div.relay_competitors_element {
    font-size: 80%;
}

div.relay_competitors_element input {
    height: 13px;
}

div.action_box {
    border: dashed 1px gray;
    padding: 5px;
    margin: 5px 0;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

div.question {
    font-weight: bold;
    color: olive;
    cursor: pointer;
    margin-top: 5px;
}

div.question .highligth {
    color: orange;
}

div.answer {
    margin-bottom: 5px;
}

div.left_column {
    float: left;
}

div.right_column {
    float: right;
}

div.commercial_box {
    background-color: olive;
    color: white;
    padding: 5px;
    overflow: auto;
    width: 245px;
    text-align: center;
    margin-bottom: 10px;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    box-shadow: 5px 4px 5px #666666;
    -moz-box-shadow: 5px 4px 5px #666666;
    -webkit-box-shadow: 5px 4px 5px #666666;
}

div.special_offer {
    background-color: orange;
}

div.commercial_box_link {
    margin-top: 3px;
    background-color: white;
    padding: 5px;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

.help {
    background-color: olive;
    color: white;
    border: olive 1px solid;
    padding: 2px;
    cursor: pointer;
    font-weight: bold;
    font-family: arial;
    font-size: 12px;
    border-radius: 2px;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
}

a.help:hover {
    text-decoration: none;
    background-color: white;
    color: olive;
}

.center {
    text-align: center;
}

.series_best_time {
    font-weight: bold;
}

.total_points {
    font-weight: bold;
}

#company_contact_corner {
    position: absolute;
    right: 10px;
    top: 10px;
}

.company_contact {
    text-align: center;
    border: 1px solid olive;
    padding: 5px;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    box-shadow: 5px 4px 5px #666666;
    -moz-box-shadow: 5px 4px 5px #666666;
    -webkit-box-shadow: 5px 4px 5px #666666;
}

.company_contact .title {
    font-weight: bold;
}

div.main_info {
    width: 880px !important;
    margin-top: 10px !important;
    margin-bottom: 15px !important;
    text-align: center !important;
    font-size: 105% !important;
}

div.main_page_columns {
    width: 890px;
}

div.races_box {
    width: 600px;
    border: 1px solid olive;
    padding: 5px;
    margin-bottom: 10px;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    box-shadow: 5px 4px 5px #666666;
    -moz-box-shadow: 5px 4px 5px #666666;
    -webkit-box-shadow: 5px 4px 5px #666666;
}

div.races_box h2 {
    margin-top: 0px;
}

div.race_scroll {
    max-height: 180px;
    overflow: auto;
}

th {
    text-align: left;
    padding: 2px 5px;
}

td {
    padding: 2px 5px;
}

div.section {
    border: 1px solid black;
    padding: 4px;
    display: table;
    margin-bottom: 8px;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    box-shadow: 5px 4px 5px #666666;
    -moz-box-shadow: 5px 4px 5px #666666;
    -webkit-box-shadow: 5px 4px 5px #666666;
}

input.shot {
    width: 20px;
}

.team_name, .team_points {
    font-weight: bold;
}

ul.positive li {
    list-style-image: url(<%= image_path 'icon_yes.gif' %>);
}

.explanation {
    cursor: help;
}

pre.file_example {
    border: black solid 1px;
    padding: 3px;
    background-color: #D9D9D9;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
}

span.unofficial {
    font-style: italic;
    font-size: 80%;
    cursor: help;
}

span.adjustment {
    cursor: help;
}

tr.odd {
    background-color: #DDEEB5;
}

#reload_counter {
  background-color: #DDEEB5;
  margin-top: 5px;
  padding: 3px;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
}

.full_width {
  width: 880px;
}

.cup_race {
  padding-left: 30px;
}

.form_label {
  background-color: #DDEEB5;
  display: inline-block;
  text-align: right;
  padding: 3px;
}

.race_form .form_label {
  width: 275px;
}

.user_form .form_label {
  width: 150px;
}
