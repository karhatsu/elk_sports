body {
    background-color: rgb(162, 160, 86);
    background: linear-gradient(to right, rgba(128, 128, 0, 0.4), rgba(128, 128, 0, 0.6), rgba(128, 128, 0, 0.4), rgba(128, 128, 0, 0.7));
    font-family: 'Muli', sans-serif;
    font-size: 12px;
    margin: 0;
    padding: 0;
}

a {
    color: olive;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

h1.mobile {
  display: none;
}

h2 {
  margin: 24px 0 12px;
  font-size: 20px;
  display: flex;
  align-items: center;
}

h2 .material-icons-outlined {
  margin-right: 4px;
}

h2.emphasize {
  text-transform: uppercase;
}

h2:first-of-type {
  margin-top: 8px;
}

.home_page h2:first-of-type {
  margin-top: 24px;
}

h3 {
  font-size: 18px;
  margin: 16px 0 12px;
}

.primary_link, .secondary_link, .back_link, .current_link {
  border: solid 1px olive;
  border-radius: 2px;
  box-shadow: 3px 3px 3px #ccc;
  cursor: pointer;
  display: inline-block;
  padding: 5px 10px;
  margin: 3px;
  min-width: 25px;
}

.primary_link {
  background-color: olive;
  background: linear-gradient(to right, rgba(128, 128, 0, 0.9), rgba(128, 128, 0, 0.7));
  color: #fff;
}

.secondary_link, .back_link {
  background-color: #fff;
  color: olive;
}

.primary_link:hover {
  background-color: #fff;
  background: #fff;
  color: olive;
  text-decoration: none;
}

.secondary_link:hover, .back_link:hover {
  background-color: olive;
  background: linear-gradient(to right, rgba(128, 128, 0, 0.9), rgba(128, 128, 0, 0.7));
  color: #fff;
  text-decoration: none;
}

form {
    margin: 0px;
}

input[type='number'] {
    width: 40px;
}

input[type='submit'], input[type='button'] {
  border: solid 1px olive;
  border-radius: 2px;
  box-shadow: 3px 3px 3px #ccc;
  cursor: pointer;
  padding: 6px 12px;
}

input[type='submit'] {
  background-color: olive;
  background: linear-gradient(to right, rgba(128, 128, 0, 0.9), rgba(128, 128, 0, 0.7));
  color: #fff;
}

input[type='button'] {
  background-color: #fff;
  color: olive;
}

input[type='submit']:hover,input[type='button']:hover {
  background: linear-gradient(to right, rgba(29, 99, 153, 0.9), rgba(29, 99, 153, 0.7));
  color: #fff;
}

select {
  background-color: white;
  color: olive;
  height: 26px;
  padding: 3px;
}

select[multiple] {
  height: 200px;
  width: 300px;
  margin-bottom: 10px;
}

label.disabled {
  color: #ccc;
}

div.action_box {
    background-image: url(<%= image_path 'action_arrow.png' %>);
    background-repeat: no-repeat;
    background-position: 5px;
    padding: 3px 5px 3px 20px;
    margin: 5px 0;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

#district_menu {
  margin-bottom: 10px;
}

.help {
    background-color: olive;
    color: white;
    border: olive 1px solid;
    padding: 2px 4px;
    cursor: pointer;
    font-weight: bold;
    font-size: 12px;
    border-radius: 2px;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
}

.info .help {
  background-color: transparent;
  border: none;
}

a.help:hover {
    text-decoration: none;
    background-color: white;
    color: olive;
}

.center {
    text-align: center;
}

.series_best_time {
    font-weight: bold;
}

.total_points {
    font-weight: bold;
}

.races_box {
    min-width: 500px;
    margin-bottom: 20px;
}

.home_page_fb_like {
    margin-bottom: 15px;
    width: 360px;
}

th {
    text-align: left;
    padding: 2px 5px;
}

td {
    padding: 2px 5px;
}

div.section {
    border: 1px solid black;
    padding: 4px;
    display: table;
    margin-bottom: 10px;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    box-shadow: 5px 4px 5px #666666;
    -moz-box-shadow: 5px 4px 5px #666666;
    -webkit-box-shadow: 5px 4px 5px #666666;
}

.team_name, .team_points {
    font-weight: bold;
}

ul.positive li {
    list-style-image: url(<%= image_path 'icon_yes.gif' %>);
}

.explanation {
    cursor: help;
}

pre.file_example {
    border: black solid 1px;
    padding: 3px;
    background-color: #D9D9D9;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
}

span.unofficial {
    font-style: italic;
    font-size: 80%;
    cursor: help;
}

span.adjustment {
    cursor: help;
}

.odd {
    background-color: #DDEEB5;
}

#reload_counter {
  background-color: #DDEEB5;
  margin-top: 5px;
  padding: 3px;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  width: 100%;
  text-align: center;
}

input[type='text'], input[type='email'], input[type='tel'], input[type='password'] {
  padding: 4px;
}

.competitors_table .header_row .title {
  display: inline-block;
  font-weight: bold;
  *display: inline;
}

.competitors_table .competitor_row {
  min-height: 25px;
  margin-bottom: 5px;
  padding: 3px;
}

.competitors_table .competitor_row .value {
  display: inline-block;
  *display: inline;
}

.competitors_table .no_result_reason .value {
  padding: 5px 0;
}

#estimates_table .number { width: 40px; }
#estimates_table .name { width: 200px; }
#estimates_table .estimate { width: 70px; }

#shots_table .number { width: 40px; }
#shots_table .name { width: 200px; }
#shots_table .total_shots { margin-right: 10px; width: 50px; }
#shots_table .individual_shots { width: 375px; }
#shots_table .result { width: 40px; }

#times_table .number { width: 40px; }
#times_table .name { width: 200px; }
#times_table .time { width: 200px; }

.title-and-fb-share {
  position: relative;
}

.title-and-fb-share .fb-share-button {
  position: absolute;
  top: 0px;
  left: 950px;
}

.title-and-fb-share.race-page .fb-share-button {
  top: 10px;
}

blockquote.public_message {
  background-color: #eee;
  border-radius: 2px;
  color: #383838;
  font-size: 12px;
  font-style: italic;
  margin: 0 0 10px;
  padding: 5px 30px;
  line-height: 1.45;
  position: relative;
}

blockquote.public_message:before {
  color: #7a7a7a;
  content: "\201C";
  display: block;
  font-family: Georgia, serif;
  font-size: 35px;
  padding-left: 10px;
  position: absolute;
  left: -5px;
  top: -5px;
}

blockquote.public_message p:first-child {
  margin: 0;
}

blockquote.public_message p {
  margin-bottom: 0;
}

.race-page-column {
  float: left;
}

.race-page-column .section {
  margin-bottom: 30px;
}

.cup_results {
  overflow: scroll;
  width: 1025px;
}

.official-page-column-left {
  float: left;
  width: 60%;
}

.official-page-column-right {
  float: left;
  width: 40%;
}

.competitors_count {
  text-align: right;
}

.competitors_total_count {
  border-top: 1px solid black;
}

.result_rotation_sub_selection {
  margin-left: 20px;
}

.announcement {
  margin-bottom: 24px;
}

.before_facebook_like_box {
  height: 16px;
}

.pagination {
  margin: 8px 0;
}
