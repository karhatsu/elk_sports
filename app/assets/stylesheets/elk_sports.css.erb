a {
    color: olive;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

h2:first-of-type {
  margin-top: 8px;
}

#district_menu {
  margin-bottom: 10px;
}

.help {
    background-color: olive;
    color: white;
    border: olive 1px solid;
    padding: 2px 4px;
    cursor: pointer;
    font-weight: bold;
    font-size: 12px;
    border-radius: 2px;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
}

.info .help {
  background-color: transparent;
  border: none;
}

a.help:hover {
    text-decoration: none;
    background-color: white;
    color: olive;
}

.center {
    text-align: center;
}

.series_best_time {
    font-weight: bold;
}

.total_points {
    font-weight: bold;
}

.home_page_fb_like {
    margin-bottom: 15px;
    width: 360px;
}

.team_name, .team_points {
    font-weight: bold;
}

.explanation {
    cursor: help;
}

pre.file_example {
    border: black solid 1px;
    padding: 3px;
    background-color: #D9D9D9;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
}

span.unofficial {
    font-style: italic;
    font-size: 80%;
    cursor: help;
}

span.adjustment {
    cursor: help;
}

#reload_counter {
  background-color: #DDEEB5;
  margin-top: 5px;
  padding: 3px;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  width: 100%;
  text-align: center;
}

blockquote.public_message {
  background-color: #eee;
  border-radius: 2px;
  color: #383838;
  font-size: 12px;
  font-style: italic;
  margin: 0 0 10px;
  padding: 5px 30px;
  line-height: 1.45;
  position: relative;
}

blockquote.public_message:before {
  color: #7a7a7a;
  content: "\201C";
  display: block;
  font-family: Georgia, serif;
  font-size: 35px;
  padding-left: 10px;
  position: absolute;
  left: -5px;
  top: -5px;
}

blockquote.public_message p:first-child {
  margin: 0;
}

blockquote.public_message p {
  margin-bottom: 0;
}

.cup_results {
  overflow: scroll;
  max-width: 1025px;
}

.result_rotation_sub_selection {
  margin-left: 20px;
}

.announcement {
  margin-bottom: 24px;
}

.before_facebook_like_box {
  height: 16px;
}

.pagination {
  margin: 8px 0;
}

.result-place-table {
  margin-bottom: 16px;
}
