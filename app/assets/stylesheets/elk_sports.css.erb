body {
    background-color: rgb(162, 160, 86);
    background: linear-gradient(to right, rgba(128, 128, 0, 0.5), rgba(128, 128, 0, 0.8), rgba(128, 128, 0, 0.6), rgba(128, 128, 0, 0.9));
    font-family: monospace;
    font-size: 12px;
    margin: 0;
    padding: 0;
}

a {
    color: olive;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

h2 {
    margin-top: 10px;
    font-size: 16px;
}

h3 {
    font-size: 14px;
}

hr.mobile {
  display: none;
}

form {
    margin: 0px;
}

input[type='number'] {
    width: 40px;
}

input[type='number'].max2 {
  width: 30px;
}

input[type='submit'],input[type='button'] {
  border: solid 1px olive;
  border-radius: 2px;
  box-shadow: 3px 3px 3px #ccc;
  cursor: pointer;
  padding: 5px 10px;
}

input[type='submit'] {
  background-color: olive;
  background: linear-gradient(to right, rgba(128, 128, 0, 0.9), rgba(128, 128, 0, 0.7));
  color: #fff;
}

input[type='button'] {
  background-color: #fff;
  color: olive;
}

input[type='submit']:hover,input[type='button']:hover {
  background: linear-gradient(to right, rgba(29, 99, 153, 0.9), rgba(29, 99, 153, 0.7));
  color: #fff;
}

label.disabled {
  color: #ccc;
}

img.competition_icon {
  -ms-transform: rotate(357deg);
  -webkit-transform: rotate(357deg);
  transform: rotate(357deg);
  box-shadow: 2px 2px 6px #ccc;
}

div.sub_element {
    background-color: #DDEEB5;
    padding: 5px;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

div.sub_form {
    margin-bottom: 5px;
}

div.sub_sub_element {
    margin-top: 2px;
    background-color: white;
    padding: 3px;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

div.sub_sub_element h3 {
    margin-top: 2px;
    margin-bottom: 2px;
    font-weight: normal;
    font-size: 12px;
}

div.age_groups_element {
    width: 80%;
}

div.relay_competitors_element {
    font-size: 80%;
}

div.relay_competitors_element input {
    height: 13px;
}

div.action_box {
    background-image: url(<%= image_path 'action_arrow.png' %>);
    background-repeat: no-repeat;
    background-position: 5px;
    padding: 3px 5px 3px 20px;
    margin: 5px 0;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

div.question {
    font-weight: bold;
    color: olive;
    cursor: pointer;
    margin-top: 5px;
}

div.question .highligth {
    color: orange;
}

div.answer {
    border: 1px solid black;
    border-radius: 3px;
    box-shadow: 5px 4px 5px #666666;
    padding: 4px;
    display: table;
    margin: 3px 0 15px 0;
}

div.left_column {
    float: left;
}

div.right_column {
    float: right;
}

.help {
    background-color: olive;
    color: white;
    border: olive 1px solid;
    padding: 2px;
    cursor: pointer;
    font-weight: bold;
    font-family: arial;
    font-size: 12px;
    border-radius: 2px;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
}

.info .help {
  background-color: transparent;
  border: none;
}

a.help:hover {
    text-decoration: none;
    background-color: white;
    color: olive;
}

.center {
    text-align: center;
}

.series_best_time {
    font-weight: bold;
}

.total_points {
    font-weight: bold;
}

#company_contact_corner {
    position: absolute;
    right: 10px;
    top: 10px;
}

.company_contact {
    text-align: center;
    border: 1px solid olive;
    padding: 5px;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    box-shadow: 5px 4px 5px #666666;
    -moz-box-shadow: 5px 4px 5px #666666;
    -webkit-box-shadow: 5px 4px 5px #666666;
    width: 200px;
}

.company_contact .title {
    font-weight: bold;
}

div.main_page_columns {
    margin-top: 10px;
    width: 1040px;
}

div.title_box {
    border: 1px solid olive;
    border-radius: 2px;
    box-shadow: 5px 5px 5px #666666;
    padding: 0;
}

div.title_box .box_title {
    background-color: olive;
    color: white;
    font-family: Arial;
    font-size: 16px;
    font-weight: bold;
    padding: 5px;
    text-align: center;
    text-transform: uppercase;
}

div.special_box .box_title {
    background-color: orange;
}

.title_box_content {
    padding: 5px;
}

#races_box {
    width: 655px;
    margin-bottom: 10px;
}

.competition_list_icon {
  background-repeat: no-repeat;
  padding: 7px 0 7px 30px;
}

.competition_sub_list_icon {
  background-repeat: no-repeat;
  padding: 7px 0 7px 30px;
}

.race_icon_ski {
  background-image: url(<%= image_path 'ski_icon.gif' %>);
}

.race_icon_run {
  background-image: url(<%= image_path 'run_icon.gif' %>);
}

.cup_icon_ski {
  background-image: url(<%= image_path 'ski_icon_cup.gif' %>);
}

.cup_icon_run {
  background-image: url(<%= image_path 'run_icon_cup.gif' %>);
}

div.section.prices_section {
    padding: 15px;
    margin: 20px 0;
}

div.section.prices_section.first {
  margin: 5px 0;
}

.home_page_box {
  margin: 0 0 10px;
}

#races_box .box_sub_title, .prices_section .box_sub_title {
    background-color: #DDEEB5;
    border-radius: 2px;
    font-size: 12px;
    margin: 3px 0;
    padding: 4px;
    text-transform: uppercase;
}

.prices_section h2 {
    margin: 2px 0 15px;
}

div.all_races_link {
    margin: 5px 0 0;
}

.home_page_fb_like {
    margin-bottom: 15px;
    width: 360px;
}

.commercial_box {
    margin-bottom: 15px;
    text-align: center;
    width: 360px;
}

.commercial_box .announcements {
    text-align: left;
}

.title_box .links {
    margin: 15px 3px;
}

.commercial_box_link {
    background-color: olive;
    color: white;
    padding: 5px 10px;
    border: 1px solid olive;
    border-radius: 2px;
}

.commercial_box_link:hover {
    background-color: white;
    color: olive;
    text-decoration: none;
}

div.special_box .commercial_box_link {
    background-color: orange;
    border: 1px solid orange;
}

div.special_box .commercial_box_link:hover {
    background-color: white;
    color: olive;
}

.changing_text_wrapper {
    background-color: #DDEEB5;
    padding: 5px;
    height: 30px;
    margin: 5px;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
}

.changing_text_wrapper .keyword {
    font-weight: bold;
}

.info_page_box {
    float: left;
    margin: 5px 20px 15px;
    text-align: center;
    width: 300px;
}

.info_page_big_box {
    float: left;
    margin: 5px 55px 15px;
    text-align: center;
    width: 400px;
}

#registration_form {
    float: left;
}

#login_link_box {
    float: left;
    margin: 10px 0 0 100px;
    text-align: center;
    width: 300px;
}

th {
    text-align: left;
    padding: 2px 5px;
}

td {
    padding: 2px 5px;
}

div.section {
    border: 1px solid black;
    padding: 4px;
    display: table;
    margin-bottom: 10px;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    box-shadow: 5px 4px 5px #666666;
    -moz-box-shadow: 5px 4px 5px #666666;
    -webkit-box-shadow: 5px 4px 5px #666666;
}

.team_name, .team_points {
    font-weight: bold;
}

ul.positive li {
    list-style-image: url(<%= image_path 'icon_yes.gif' %>);
}

.explanation {
    cursor: help;
}

pre.file_example {
    border: black solid 1px;
    padding: 3px;
    background-color: #D9D9D9;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
}

span.unofficial {
    font-style: italic;
    font-size: 80%;
    cursor: help;
}

span.adjustment {
    cursor: help;
}

.odd {
    background-color: #DDEEB5;
}

#reload_counter {
  background-color: #DDEEB5;
  margin-top: 5px;
  padding: 3px;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
}

.full_width {
  width: 880px;
}

.read_only_form_row {
  margin: 3px 0;
}

